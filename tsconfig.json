{
    "compilerOptions": {
        "target": "ES2020",                
        "module": "CommonJS",              
        "outDir": "./dist",                
        "rootDir": "./src",                
        "strict": true,                    
        "esModuleInterop": true,           
        "moduleResolution": "node",        
        "skipLibCheck": true,              
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}